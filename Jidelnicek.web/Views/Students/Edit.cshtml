@{
}

@model Jidelnicek.web.Models.Entities.Menu

<h1>Edit Menu</h1>

@if (Model is null)
{
    <p>No student was found with this ID</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Number</label>
            <input type="text" class="form-control" asp-for="Number" />
        </div> 
        
        <div class="mt-3">
            <label class="form-label">Dish</label>
            <input type="text" class="form-control" asp-for="Dish" />
        </div>

        <div class="mt-3">
            <label class="form-label">Grams</label>
            <input type="text" class="form-control" asp-for="Grams" />
        </div>

        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" asp-for="Price" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Order</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" 
                asp-action="Delete"
                    asp-controller="Students">
                Delete
                </button>
               
        </div>
    </form>
}


